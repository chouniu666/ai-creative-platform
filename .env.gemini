DB_NAME=ai_creative
DB_USER=postgres
DB_PASSWORD=ai_creative_secure_2025
DB_SSL_MODE=disable

# ===========================================
# Redis配置
# ===========================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis_secure_2025
REDIS_DB=0

# ===========================================
# Qdrant向量数据库配置
# ===========================================
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# ===========================================
# JWT认证配置
# ===========================================
JWT_SECRET=ai_creative_jwt_secret_key_2025_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=168h

# ===========================================
# AI服务配置 - Google Gemini
# ===========================================
# Google Gemini配置
OPENAI_API_KEY=AIzaSyCEx1qe-q9QZpkmzvOvB5TL8FU5kOcDtGo
OPENAI_ORG_ID=
OPENAI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# Anthropic配置（备用）
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com

# AI服务配置
AI_DEFAULT_MODEL=gemini-2.0-flash-exp
# Gemini可用模型：
# gemini-2.0-flash-exp - 最新实验版本
# gemini-1.5-flash - 快速版本
# gemini-1.5-pro - 专业版本
# gemini-1.0-pro - 标准版本
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=30s

# ===========================================
# 应用配置
# ===========================================
APP_ENV=production
APP_PORT=8080
APP_HOST=0.0.0.0
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# 前端配置 (SvelteKit)
# ===========================================
PUBLIC_API_URL=http://localhost:8080
PUBLIC_WS_URL=ws://localhost:8080
PUBLIC_APP_NAME=AI创作平台
PUBLIC_APP_VERSION=1.0.0
FRONTEND_PORT=3000

# ===========================================
# 安全配置
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
BCRYPT_COST=12

# ===========================================
# 文件存储配置
# ===========================================
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=.txt,.md,.json,.docx,.pdf
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3配置 (可选)
AWS_REGION=us-east-1
AWS_BUCKET=ai-creative-platform
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ===========================================
# 监控配置
# ===========================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# ===========================================
# 邮件配置 (可选)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@ai-creative-platform.com

# ===========================================
# 开发配置
# ===========================================
# Gin框架配置
GIN_MODE=release

# 热重载配置
HOT_RELOAD=false
WATCH_DIRS=./internal,./cmd

# 调试配置
DEBUG_SQL=false
DEBUG_REDIS=false
DEBUG_AI=true

# ===========================================
# 生产环境配置
# ===========================================
# SSL配置
SSL_CERT_PATH=
SSL_KEY_PATH=

# 域名配置
DOMAIN=ai-creative-platform.com
SUBDOMAIN=api