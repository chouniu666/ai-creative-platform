# AI创作平台环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ===========================================
# 数据库配置
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_creative
DB_USER=postgres
DB_PASSWORD=password
DB_SSL_MODE=disable

# ===========================================
# Redis配置
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# Qdrant向量数据库配置
# ===========================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ===========================================
# JWT认证配置
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=168h

# ===========================================
# AI服务配置
# ===========================================
# OpenAI配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=
OPENAI_BASE_URL=https://api.openai.com/v1

# 国内AI服务商配置示例（可替换OPENAI_BASE_URL）
# DeepSeek: https://api.deepseek.com/v1
# 月之暗面: https://api.moonshot.cn/v1
# 智谱AI: https://open.bigmodel.cn/api/paas/v4
# 阿里云通义千问: https://dashscope.aliyuncs.com/compatible-mode/v1
# 百度文心一言: https://aip.baidubce.com/rpc/2.0/ai_custom/v1
# 腾讯混元: https://hunyuan.tencentcloudapi.com/v1

# Anthropic配置
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_BASE_URL=https://api.anthropic.com

# AI服务配置
AI_DEFAULT_MODEL=gpt-4
# 其他模型示例：
# DeepSeek: deepseek-chat, deepseek-coder
# 月之暗面: moonshot-v1-8k, moonshot-v1-32k
# 智谱AI: glm-4, glm-4v
# 通义千问: qwen-turbo, qwen-plus, qwen-max
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=30s

# ===========================================
# 应用配置
# ===========================================
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# 前端配置 (SvelteKit)
# ===========================================
PUBLIC_API_URL=http://localhost:8080
PUBLIC_WS_URL=ws://localhost:8080
PUBLIC_APP_NAME=AI创作平台
PUBLIC_APP_VERSION=1.0.0

# ===========================================
# 安全配置
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
BCRYPT_COST=12

# ===========================================
# 文件存储配置
# ===========================================
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=.txt,.md,.json
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3配置 (可选)
AWS_REGION=us-east-1
AWS_BUCKET=ai-creative-platform
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ===========================================
# 监控配置
# ===========================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# ===========================================
# 邮件配置 (可选)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@ai-creative-platform.com

# ===========================================
# 开发配置
# ===========================================
# Gin框架配置
GIN_MODE=debug

# 热重载配置
HOT_RELOAD=true
WATCH_DIRS=./internal,./cmd

# 调试配置
DEBUG_SQL=false
DEBUG_REDIS=false
DEBUG_AI=true

# ===========================================
# 生产环境配置
# ===========================================
# 在生产环境中设置以下变量
# APP_ENV=production
# GIN_MODE=release
# LOG_LEVEL=warn
# DEBUG_SQL=false
# DEBUG_REDIS=false
# DEBUG_AI=false

# SSL配置
SSL_CERT_PATH=
SSL_KEY_PATH=

# 域名配置
DOMAIN=ai-creative-platform.com
SUBDOMAIN=api